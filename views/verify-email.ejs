<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify Email</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script type="module">
      import {
        getAuth,
        onAuthStateChanged,
      } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
      import { app } from "../firebase/firebaseApp.js";

      const auth = getAuth(app);
      const verifyButton = document.getElementById("verifyButton");

      verifyButton.addEventListener("click", () => {
        const user = auth.currentUser;
        if (user) {
          user.reload().then(() => {
            if (user.emailVerified) {
              window.location.href = "/"; // Redirect to index
            } else {
              alert("Please verify your email before proceeding.");
            }
          });
        }
      });

      onAuthStateChanged(auth, (user) => {
        if (user) {
          user.reload().then(() => {
            if (user.emailVerified) {
              window.location.href = "/"; // Redirect to index
            }
          });
        }
      });
    </script>
  </head>
  <body class="bg-gray-100 h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded shadow-md w-1/2 md:w-1/3 lg:w-1/4">
      <h2 class="text-2xl font-semibold mb-6 text-center">Verify Your Email</h2>
      <p class="mb-4">
        A verification email has been sent to <strong><%= email %></strong>.
        Please check your inbox and click the verification link.
      </p>
      <form action="/resend-verification" method="post">
        <input type="hidden" name="email" value="<%= email %>" />
        <button
          type="submit"
          class="bg-cyan-500 hover:bg-cyan-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full"
        >
          Resend Verification Email
        </button>
      </form>
      <button
        id="verifyButton"
        class="mt-4 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full"
      >
        Check Verification Status
      </button>
      <div class="mt-4 text-center">
        <a href="/" class="text-sm text-gray-600 hover:underline"
          >Back to Home</a
        >
      </div>
    </div>
  </body>
</html>
