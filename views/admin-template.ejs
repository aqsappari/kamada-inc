<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
      #sidebar a:hover {
        transform: translateX(4px);
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <div class="flex h-screen relative">
      <div
        class="bg-cyan-800 text-white w-64 p-4 shadow-md transition-transform duration-300 ease-in-out absolute top-0 left-0 bottom-0 z-[99] lg:relative hidden lg:flex flex-col"
        id="sidebar"
      >
        <div class="flex items-center mb-6">
          <img
            src="/images/2.svg"
            alt="Logo"
            class="mr-2 rounded-md"
            width="40px"
          />
          <h1 class="text-3xl font-bold italic">KAMADA</h1>
        </div>
        <nav class="flex-grow">
          <ul class="space-y-2">
            <li>
              <a
                href="dashboard"
                class="flex items-center px-4 py-2 rounded-md transition-transform duration-200 <%= currentPage === '/admin/dashboard' ? 'bg-cyan-700 pointer-events-none cursor-default' : 'hover:bg-cyan-700' %>"
              >
                <i class="fas fa-home mr-2"></i> Home
              </a>
            </li>
            <li>
              <a
                href="products"
                class="flex items-center px-4 py-2 rounded-md transition-transform duration-200 <%= currentPage === '/admin/products' ? 'bg-cyan-700 pointer-events-none cursor-default' : 'hover:bg-cyan-700' %>"
              >
                <i class="fas fa-box-open mr-2"></i> Products
              </a>
            </li>
            <li>
              <a
                href="orders"
                class="flex items-center px-4 py-2 rounded-md transition-transform duration-200 <%= currentPage === '/admin/orders' ? 'bg-cyan-700 pointer-events-none cursor-default' : 'hover:bg-cyan-700' %>"
              >
                <i class="fas fa-shopping-cart mr-2"></i> Orders
              </a>
            </li>
          </ul>
        </nav>
        <nav>
          <ul class="space-y-2">
            <li>
              <a
                href="#"
                class="flex items-center px-4 py-2 hover:bg-cyan-700 rounded-md transition-transform duration-200"
              >
                <i class="fas fa-cog mr-2"></i> Settings
              </a>
            </li>
            <li>
              <a
                href="logout"
                class="flex items-center px-4 py-2 hover:bg-cyan-700 rounded-md transition-transform duration-200"
              >
                <i class="fas fa-sign-out-alt mr-2"></i> Logout
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="flex-1 p-6 overflow-y-auto" id="main-content">
        <%- body %>
      </div>
    </div>
    <script>
      const sidebarToggle = document.getElementById("sidebarToggle");
      const sidebar = document.getElementById("sidebar");
      const mainContent = document.getElementById("main-content");

      sidebarToggle.addEventListener("click", () => {
        sidebar.classList.toggle("hidden");
        sidebar.classList.toggle("flex");
        mainContent.classList.toggle("overflow-y-auto");
        mainContent.classList.toggle("overflow-y-hidden");
      });
    </script>
    <%- script %>
  </body>
</html>
